<UserControl x:Class="ATM_Task.Views.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ATM_Task.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button Content="Снять" Command="{Binding GoToWithdrawMenuCommand}" 
                    HorizontalAlignment="Center" FontSize="20"/>
            <Button Content="Внести" Command="{Binding GoToDepositMenuCommand}" 
                    Margin="0 10 0 0" HorizontalAlignment="Center" FontSize="20"/>
            <Button Content="Статус" Command="{Binding GoToStatusMenuCommand}" 
                    Margin="0 10 0 0" HorizontalAlignment="Center" FontSize="20"/>
        </StackPanel>
    </Grid>
</UserControl>
